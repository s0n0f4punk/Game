<UserControl x:Class="Game.PagesWindows.WeaponUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Game.PagesWindows"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="90">
    <Grid Height="90" Width="90" Margin="5" Name="Grid">
        <Image x:Name="Image" Source="/Resources/Nuka-Shredder.png" Width="100"/>
        <TextBlock Visibility="Collapsed" x:Name="CorX"></TextBlock>
        <TextBlock Visibility="Collapsed" x:Name="CorY"></TextBlock>
        <TextBlock x:Name="GunType" VerticalAlignment="Bottom">Прикол</TextBlock>
    </Grid>
</UserControl>
